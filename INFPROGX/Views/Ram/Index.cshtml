@model IEnumerable<INFPROGX.Models.Ram>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
 @if (User.IsInRole("Admin")){ 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
 }
<p>
    Total products: @Model.Count();</p>
<table>
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image != null)
            {
                <img src=@("/Images/Products/"+Url.Content(item.Image)) alt="IMAGES" style="width:100px;height:100px;"/>
            }else{
                <img src=@("/Images/Products/Fill.jpg") alt="IMAGES" style="width:100px;height:100px;"/>
            }
        </td>
        <td>                           
             @Html.ActionLink(item.Name,"Details", new { id = item.ProductId })
        
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Add to PC", "Add", "Home", new { id = item.ProductId, type = "ram" }, null)
        </td>
    </tr>
}
</table>
